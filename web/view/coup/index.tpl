<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1" style="padding-top: 20px;">
			<h1 class="text-center">激活优惠券</h1>
		</div>
		<div class="col-md-10 col-md-offset-1" style="padding-top: 50px;">
			<form id="activeform" class="form-horizontal" action="../coup/active" method="POST">
				<div class="form-group">
					<label for="commoncode" class="col-sm-2 control-label"> <font color="red">*</font>
						优惠券卡号
					</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="commoncode" name="commoncode" value="{$commoncode}" placeholder="优惠券卡号"/>
					</div>
				</div>
				<div class="form-group">
					<label for="codepassword" class="col-sm-2 control-label"> <font color="red">*</font>
						密码
					</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="codepassword" name="codepassword" value="{$codepassword}" placeholder="密码"/>
					</div>
				</div>
				<div class="form-group">
					<label for="phone_mob" class="col-sm-2 control-label">
						<font color="red">*</font>
						领券人手机号
					</label>
					<div class="col-sm-10">
						<input type="text" class="form-control" id="phone_mob" name="phone_mob" value="{$phone_mob}" placeholder="领券人手机号"/>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">激活</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>